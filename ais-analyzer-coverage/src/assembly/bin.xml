<assembly>
	<id>dist</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>src/bin</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.sh</include>
				<include>*.pl</include>
			</includes>
			<fileMode>755</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.xml</include>
				<include>log4j.xml</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>web</directory>
			<outputDirectory>web</outputDirectory>
			<includes>
				<include>**</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>