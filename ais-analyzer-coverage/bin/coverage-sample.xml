<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<!--
Reads AIS messages from FILE and saves coverage data to memory only.
-->
<aisCoverageConfiguration>
	<aisbus>
	
		<provider xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="fileReaderProviderConfiguration">
			<filename>d:\SÃ¸fart\aisdump_fullday.txt</filename>
		</provider>
		
		
		<consumer xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="distributerConsumerConfiguration">
			<name>UNFILTERED</name>
		</consumer>
	</aisbus>
	
	<!--Sets the grid granularity; the latitude and longitude minimum degree -->
	<latSize>0.0225225225</latSize>
    <lonSize>0.0386812541</lonSize>
	
	<!--Specifies where to store coverage data.
	Currently supported types are: "MemoryOnly" or "MongoDB".
	MemoryOnly will process a file many times faster than MongoDB.
	-->
	<databaseConfiguration>
        <type>MemoryOnly</type>
    </databaseConfiguration>
    
	<!--Access the frontend via http://localhost:8090/coverage  -->
	<serverConfiguration>
		<port>8090</port>
		<webappPath>web</webappPath>
		<contextPath>/coverage</contextPath>
	</serverConfiguration>
	
</aisCoverageConfiguration>
